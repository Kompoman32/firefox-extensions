{
  "manifest_version": 2,
  "name": "2ch design",
  "version": "1.4.2.2",

  "description": "Design for 2ch by Kompoman32",

  "content_scripts": [
    {
      "matches": ["*://2ch.hk/*/*"],
      "js": ["ext.js"],
      "css": ["./style.css"],
      "run_at": "document_end"
    }
  ],

  "permissions": ["storage"],

  "page_action": {
    "browser_style": true,
    "default_icon": "settings/favicon.ico",
    "default_popup": "settings/options.html",
    "show_matches": ["*://2ch.hk/*/*"],
    "hide_matches": ["*://2ch.hk/*/arch", "*://2ch.hk/*/arch/*"]
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{82551ef5-08cb-4443-9c16-8d5ff38c0bce}"
    }
  }
}
