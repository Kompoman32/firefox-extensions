{
  "manifest_version": 2,
  "name": "2ch design",
  "version": "1.3.2",

  "description": "Design for 2ch by Kompoman32",

  "content_scripts": [
    {
      "matches": ["*://2ch.hk/*/*"],
      "js": ["ext.js"],
      "css": ["./style.css"]
    }
  ],

  "permissions": ["storage"],

  "options_ui": {
    "page": "settings/options.html",
    "chrome_style": true,
    "browser_style": true
  },

  "browser_action": {
    "default_icon": "settings/favicon.ico",
    "default_popup": "settings/options.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{82551ef5-08cb-4443-9c16-8d5ff38c0bce}"
    }
  }
}
